#include<iostream.h>
#include<conio.h>

 void main()
 {
  char str[30];

  cout<<"enter any string:";
  cin>>str;

  for(int i=0;str[i]!='\0';i++)
  {
   if(str[i]>='A' && str[i]<='Z')
   {
    str[i]+=32;
   }
   else if(str[i]>='a' && str[i]<='z')
   {
    str[i]-=32;
   }
  }

   cout<<"string after convert capital letters into small and viceaversa:";
   cout<<str;
   getch();
 }